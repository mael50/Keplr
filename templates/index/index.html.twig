{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="w-full">
    <!-- Contenu principal -->
    <div class="flex-1 ">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 md:py-12">
            <div class="bg-white rounded-2xl shadow-sm p-4 md:p-8">
                <!-- En-tête -->
                <div class="mb-8">
                    <h1 class="text-3xl font-bold text-gray-900">Tableau de bord</h1>
                    <p class="mt-2 text-gray-600">Bienvenue sur votre espace personnel</p>
                </div>

                <!-- Statistiques rapides -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    <div class="bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl p-6 text-white">
                        <div class="text-sm font-semibold opacity-75">Outils ajoutés</div>
                        <div class="text-3xl font-bold mt-2">{{ tools|length }}</div>
                    </div>
                    <div class="bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl p-6 text-white">
                        <div class="text-sm font-semibold opacity-75">Flux RSS suivis</div>
                        <div class="text-3xl font-bold mt-2">{{ rssFeeds|length }}</div>
                    </div>
                    <div class="bg-gradient-to-br from-amber-500 to-amber-600 rounded-xl p-6 text-white">
                        <div class="text-sm font-semibold opacity-75">Repos GitHub suivis</div>
                        <div class="text-3xl font-bold mt-2">{{ repositories|length }}</div>
                    </div>
                </div>

                <!-- Section des formulaires -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 my-8">
                    <!-- Formulaire Tool -->
                    <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-300">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="w-12 h-12 flex items-center justify-center bg-indigo-100 rounded-xl">
                                <i class="fas fa-tools text-xl text-indigo-600"></i>
                            </div>
                            <h2 class="text-xl font-semibold text-gray-900">Nouvel outil</h2>
                        </div>
                        {{ form_start(toolForm, {'attr': {'class': 'space-y-4'}}) }}
                            <div>
                                {{ form_widget(toolForm.url, {
                                    'attr': {
                                        'class': 'w-full p-2 rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500',
                                        'placeholder': 'URL de l\'outil'
                                    }
                                }) }}
                            </div>
                            <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2.5 border border-transparent rounded-lg text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
                                <i class="fas fa-plus mr-2"></i>
                                Ajouter
                            </button>
                        {{ form_end(toolForm) }}
                    </div>

                    <!-- Formulaire RSS -->
                    <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-300">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="w-12 h-12 flex items-center justify-center bg-emerald-100 rounded-xl">
                                <i class="fas fa-rss text-xl text-emerald-600"></i>
                            </div>
                            <h2 class="text-xl font-semibold text-gray-900">Nouveau flux RSS</h2>
                        </div>
                        {{ form_start(rssFeedForm, {'attr': {'class': 'space-y-4'}}) }}
                            <div>
                                {{ form_widget(rssFeedForm.url, {
                                    'attr': {
                                        'class': 'w-full p-2 rounded-lg border-gray-300 focus:border-orange-500 focus:ring-orange-500',
                                        'placeholder': 'URL du flux RSS'
                                    }
                                }) }}
                            </div>
                            <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2.5 border border-transparent rounded-lg text-sm font-medium text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-colors duration-200">
                                <i class="fas fa-plus mr-2"></i>
                                Ajouter
                            </button>
                        {{ form_end(rssFeedForm) }}
                    </div>

                    <!-- Formulaire Github -->
                    <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-300">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="w-12 h-12 flex items-center justify-center bg-amber-100 rounded-xl">
                                <i class="fab fa-github text-xl text-amber-600"></i>
                            </div>
                            <h2 class="text-xl font-semibold text-gray-900">Nouveau dépôt</h2>
                        </div>
                        {{ form_start(githubRepoForm, {'attr': {'class': 'space-y-4'}}) }}
                            <div>
                                {{ form_widget(githubRepoForm.url, {
                                    'attr': {
                                        'class': 'w-full p-2 rounded-lg border-gray-300 focus:border-gray-500 focus:ring-gray-500',
                                        'placeholder': 'URL du dépôt GitHub'
                                    }
                                }) }}
                            </div>
                            <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2.5 border border-transparent rounded-lg text-sm font-medium text-white bg-amber-600 hover:bg-amber-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors duration-200">
                                <i class="fas fa-plus mr-2"></i>
                                Ajouter
                            </button>
                        {{ form_end(githubRepoForm) }}
                    </div>
                </div>

                <!-- Récapitulatif des articles -->
                <div class="bg-white rounded-xl shadow-lg p-6 my-4 transition-all duration-300 hover:shadow-xl">
                    <div class="flex items-center justify-between mb-8">
                        <h2 class="text-2xl font-bold text-gray-900">Articles du jour</h2>
                        <div class="flex items-center gap-6">
                            <button id="prevDay" class="p-3 rounded-lg hover:bg-indigo-50 text-gray-600 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                            <span id="currentDate" class="text-sm font-semibold text-gray-700"></span>
                            <button id="nextDay" class="p-3 rounded-lg hover:bg-indigo-50 text-gray-600 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>

                    {% if articles|length > 0 %}
                        {% set dates = articles|keys|sort|reverse %}
                        {% for date, feedArticles in articles %}
                            <div class="date-content" data-date="{{ date }}" style="display: none;">
                                <div class="space-y-6">
                                    {% for feedName, articles in feedArticles %}
                                        <div class="bg-gray-50 rounded-xl p-5 hover:bg-gray-100 transition-colors duration-200">
                                            <div class="flex items-center gap-3 text-sm font-medium text-gray-700 mb-4">
                                                <i class="fas fa-rss text-indigo-500"></i>
                                                <span>{{ feedName }}</span>
                                            </div>
                                            <ul class="space-y-4">
                                                {% for article in articles %}
                                                    <li>
                                                        <a href="{{ article.link }}" 
                                                        data-article-id="{{ article.id }}"
                                                        target="_blank"
                                                        class="mark-as-read group flex items-start gap-4 p-3 rounded-xl transition-all duration-200 hover:bg-white hover:shadow-md">
                                                            {% if not article.isRead %}
                                                                <span class="relative flex h-3 w-3 mt-1.5">
                                                                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                                                                    <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"></span>
                                                                </span>
                                                            {% endif %}
                                                            <div>
                                                                <h4 class="text-gray-900 group-hover:text-indigo-600 font-semibold transition-colors duration-200">
                                                                    {{ article.title }}
                                                                </h4>
                                                                <p class="text-sm text-gray-600 line-clamp-1 mt-2 group-hover:text-gray-700">
                                                                    {{ article.description|striptags }}
                                                                </p>
                                                                <span class="text-xs font-medium text-gray-500 mt-2 inline-block">
                                                                    {{ article.pubDate|date('H:i') }}
                                                                </span>
                                                            </div>
                                                        </a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-center py-12 text-gray-500">
                            <p class="text-lg">Aucun article pour le moment</p>
                        </div>
                    {% endif %}
                </div>

                <!-- Récapitulatif des releases -->
                <div class="bg-white rounded-xl shadow-lg p-6 my-4 transition-all duration-300 hover:shadow-xl">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold text-gray-900">Dernières releases GitHub</h2>
                        <a href="{{ path('app_github_repos') }}" class="text-indigo-600 hover:text-indigo-700 font-medium text-sm">
                            Voir toutes les releases <i class="fas fa-arrow-right ml-2"></i>
                        </a>
                    </div>

                    {% if repositories|length > 0 %}
                        <div class="space-y-4">
                            {% for repository in repositories|slice(0, 3) %}
                                {% set latestRelease = repository.releases|sort((a, b) => b.updated <=> a.updated)|first %}
                                {% if latestRelease %}
                                    <div class="bg-gray-50 rounded-xl p-5 hover:bg-gray-100 transition-colors duration-200">
                                        <div class="flex items-center justify-between mb-3">
                                            <div class="flex items-center gap-3">
                                                <i class="fab fa-github text-gray-700"></i>
                                                <a href="{{ repository.url }}" target="_blank" class="text-sm font-medium text-gray-700 hover:text-indigo-600">
                                                    {{ repository.owner }}/{{ repository.name }}
                                                </a>
                                            </div>
                                            <span class="text-xs text-gray-500">
                                                <i class="far fa-clock mr-1"></i>
                                                {{ latestRelease.updated|date('d/m/Y') }}
                                            </span>
                                        </div>
                                        <h4 class="font-semibold text-gray-900 mb-2">
                                            {{ latestRelease.title }}
                                        </h4>
                                        {% if latestRelease.content %}
                                            <p class="text-sm text-gray-600 line-clamp-2">
                                                {{ latestRelease.content|striptags }}
                                            </p>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-8 text-gray-500">
                            <p class="text-lg">Aucun repository GitHub ajouté</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-white {
        transform: translateY(0);
        transition: all 0.3s ease;
    }
    .bg-white:hover {
        transform: translateY(-4px);
    }
    .bg-white {
        transition: transform 0.2s ease-in-out;
    }
    .bg-white:hover {
        transform: translateY(-2px);
    }
    .line-clamp-1 {
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

<script>
document.addEventListener('turbo:load', function() {
    const dates = {{ dates|json_encode|raw }};
    let currentIndex = 0;
    const prevBtn = document.getElementById('prevDay');
    const nextBtn = document.getElementById('nextDay');
    const currentDateEl = document.getElementById('currentDate');
    const dateContents = document.querySelectorAll('.date-content');

    function updateDisplay() {
        dateContents.forEach(el => el.style.display = 'none');
        const currentDate = dates[currentIndex];
        document.querySelector(`[data-date="${currentDate}"]`).style.display = 'block';
        
        // Formater la date pour l'affichage
        const dateObj = new Date(currentDate);
        const options = { weekday: 'long', day: 'numeric', month: 'long' };
        currentDateEl.textContent = dateObj.toLocaleDateString('fr-FR', options);

        // Gérer l'état des boutons
        prevBtn.disabled = currentIndex === dates.length - 1;
        nextBtn.disabled = currentIndex === 0;
    }

    prevBtn.addEventListener('click', () => {
        if (currentIndex < dates.length - 1) {
            currentIndex++;
            updateDisplay();
        }
    });

    nextBtn.addEventListener('click', () => {
        if (currentIndex > 0) {
            currentIndex--;
            updateDisplay();
        }
    });

    updateDisplay();
});

document.querySelectorAll('.mark-as-read').forEach(link => {
    link.addEventListener('click', function(e) {
        e.preventDefault();
        
        const articleId = this.dataset.articleId;
        const articleLink = this.href;
        const articleElement = this;

        fetch(`/news/mark-as-read/${articleId}`, {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Supprimer l'indicateur non lu
                const unreadIndicator = articleElement.querySelector('.relative.flex.h-3.w-3');
                if (unreadIndicator) {
                    unreadIndicator.remove();
                }
                // Ouvrir le lien dans un nouvel onglet
                window.open(articleLink, '_blank');
            }
        })
        .catch(error => console.error('Erreur:', error));
    });
});
</script>
{% endblock %}