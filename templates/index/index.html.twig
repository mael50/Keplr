{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="flex min-h-screen">
    <!-- Contenu principal -->
    <div class="flex-1 ">
        <div class="max-w-7xl mx-auto px-8 py-12">
            <div class="bg-white rounded-2xl shadow-sm p-8">
                <!-- En-tête -->
                <div class="mb-8">
                    <h1 class="text-3xl font-bold text-gray-900">Tableau de bord</h1>
                    <p class="mt-2 text-gray-600">Bienvenue sur votre espace personnel</p>
                </div>

                <!-- Statistiques rapides -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    <div class="bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl p-6 text-white">
                        <div class="text-sm font-semibold opacity-75">Outils ajoutés</div>
                        <div class="text-3xl font-bold mt-2">{{ tools|length }}</div>
                    </div>
                    <div class="bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl p-6 text-white">
                        <div class="text-sm font-semibold opacity-75">Flux RSS suivis</div>
                        <div class="text-3xl font-bold mt-2">{{ rssFeeds|length }}</div>
                    </div>
                    <div class="bg-gradient-to-br from-amber-500 to-amber-600 rounded-xl p-6 text-white">
                        <div class="text-sm font-semibold opacity-75">Versions suivies</div>
                        <div class="text-3xl font-bold mt-2">12</div>
                    </div>
                </div>

                <!-- Formulaire Tool -->
                <div class="bg-gray-50 rounded-xl p-6 my-4">
                    <h2 class="text-xl font-semibold text-gray-900 mb-6">Ajouter un nouvel outil</h2>
                    {{ form_start(toolForm, {'attr': {'class': 'space-y-6'}}) }}
                            <div class="space-y-2">
                                {{ form_label(toolForm.url, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(toolForm.url, {'attr': {
                                    'class': 'mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'
                                }}) }}
                                {{ form_errors(toolForm.url) }}
                            </div>
                        <div class="flex justify-end">
                            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
                                <i class="fas fa-plus mr-2"></i>
                                Ajouter l'outil
                            </button>
                        </div>
                    {{ form_end(toolForm) }}
                </div>

                <!-- Formulaire RSS -->
                 <div class="bg-gray-50 rounded-xl p-6 my-4">
                    <h2 class="text-xl font-semibold text-gray-900 mb-6">Ajouter un flux RSS</h2>
                    {{ form_start(rssFeedForm, {'attr': {'class': 'space-y-6'}}) }}
                            {# <div class="space-y-2">
                                {{ form_label(rssFeedForm.name, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(rssFeedForm.name, {'attr': {
                                    'class': 'mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'
                                }}) }}
                                {{ form_errors(rssFeedForm.name) }}
                            </div> #}
                            <div class="space-y-2">
                                {{ form_label(rssFeedForm.url, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(rssFeedForm.url, {'attr': {
                                    'class': 'mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'
                                }}) }}
                                {{ form_errors(rssFeedForm.url) }}
                            </div>
                        <div class="flex justify-end">
                            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
                                <i class="fas fa-plus mr-2"></i>
                                Ajouter le flux RSS
                            </button>
                        </div>
                    {{ form_end(rssFeedForm) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Animations subtiles */
    .bg-white {
        transition: transform 0.2s ease-in-out;
    }
    .bg-white:hover {
        transform: translateY(-2px);
    }
</style>
{% endblock %}