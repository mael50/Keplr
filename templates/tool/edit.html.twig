{% extends 'base.html.twig' %}

{% block title %}
    Modifier {{ tool.name }}
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
        <!-- Card container -->
        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
            <!-- Header -->
            <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                <h1 class="text-2xl font-bold text-gray-900 leading-tight">
                    Modifier <span class="text-indigo-600">{{ tool.name }}</span>
                </h1>
            </div>

            <!-- Form -->
            <form method="POST" class="p-6 space-y-8">
                <div class="space-y-6">
                    <!-- Nom -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Nom</label>
                        <input 
                            type="text" 
                            name="name" 
                            value="{{ tool.name }}" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out"
                        >
                    </div>

                    <!-- Description -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
                        <textarea 
                            name="description" 
                            rows="4" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out resize-none"
                        >{{ tool.description }}</textarea>
                    </div>

                    <!-- Image URL -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Image de couverture (URL)</label>
                        <input 
                            type="url" 
                            name="cover" 
                            value="{{ tool.cover }}" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out"
                        >
                    </div>

                    <!-- Categories -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-4">Cat√©gories</label>
                        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                            {% for category in categories %}
                                <label class="relative flex items-start p-3 rounded-lg border border-gray-200 hover:border-indigo-500 cursor-pointer transition-all duration-200">
                                    <div class="flex items-center h-5">
                                        <input 
                                            type="checkbox" 
                                            name="categories[]" 
                                            value="{{ category.name }}"
                                            {% if category in tool.categories %}checked{% endif %}
                                            class="h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 transition duration-150 ease-in-out"
                                        >
                                    </div>
                                    <span class="ml-3 text-sm text-gray-700">{{ category.name }}</span>
                                </label>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="pt-6 border-t border-gray-200 flex items-center justify-end space-x-4">
                    <a 
                        href="{{ path('app_tools') }}" 
                        class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out"
                    >
                        Annuler
                    </a>
                    <button 
                        type="submit" 
                        class="px-6 py-2 bg-indigo-600 text-white text-sm font-semibold rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out shadow-sm"
                    >
                        Enregistrer les modifications
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}