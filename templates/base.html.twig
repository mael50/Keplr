<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="manifest" href="{{ asset('manifest.json') }}">
        <meta name="theme-color" content="#4f46e5">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black">
        <meta name="apple-mobile-web-app-title" content="Keplr">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,200..800&display=swap" rel="stylesheet">
        <link rel="apple-touch-icon" href="{{ asset('icons/icon-152x152.png') }}">
        {% block stylesheets %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        {{ encore_entry_link_tags('app') }}

    </head>
    <body class="flex w-full overflow-x-hidden bg-gray-50">
        {% set current_route = app.request.attributes.get('_route') %}
        {% set full_screen_routes = ['app_login', 'app_register'] %}

        {% if app.user and current_route not in full_screen_routes %}
            {% include 'partials/sidebar.html.twig' %}
            {% include 'partials/header.html.twig' %}
        {% endif %}

        <main class="{% if current_route in full_screen_routes %}
                      fixed inset-0 w-full h-full overflow-hidden
                    {% else %}
                      flex-1 w-full min-h-screen ml-0 md:ml-64
                    {% endif %}">
            
            {% if current_route not in full_screen_routes %}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                    <div style="padding: 1rem; margin-bottom: 1rem; font-size: 0.875rem; color: {{ label == 'success' ? '#065f46' : (label == 'error' ? '#991b1b' : '#92400e') }}; background-color: {{ label == 'success' ? '#d1fae5' : (label == 'error' ? '#fee2e2' : '#fffbeb') }}; border-radius: 0.5rem;" role="alert">
                        {{ message }}
                    </div>
                    {% endfor %}
                {% endfor %}
                <div class="p-4 md:p-8">
            {% endif %}
            
            {% block body %}
            {% endblock %}

            {% if current_route not in full_screen_routes %}
                </div>
            {% endif %}
        </main>
    </body>

    <script>
    if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
        navigator.serviceWorker.register('/sw.js')
            .then(registration => {
            console.log('ServiceWorker registration successful');
            })
            .catch(err => {
            console.log('ServiceWorker registration failed: ', err);
            });
        });
    }
    </script>
</html>
