{% extends 'base.html.twig' %}

{% block title %}Articles des flux RSS{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Articles des flux RSS</h1>

    {% if articles|length == 0 %}
        <div class="text-center py-12">
            <div class="text-gray-500">Aucun article n'a été trouvé</div>
        </div>
    {% else %}
        <div class="grid grid-cols-1 gap-8">
            {% for feedName, feedArticles in articles %}
                <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                    {# En-tête du flux RSS #}
                    <div class="bg-gray-50 border-b border-gray-200 px-6 py-4">
                        <div class="flex items-center justify-between">
                            <h2 class="text-xl font-semibold text-gray-900">
                                {{ feedName }} 
                            </h2>
                            <!-- Bouton pour accéder aux articles du flux -->
                            <a href="{{ path('app_article_rss', {'rssFeed': feedArticles[0].RssFeed.id}) }}"
                               class="text-indigo-600 hover:text-indigo-800">
                                Voir tous les articles
                            </a>

                            {% if feedArticles[0].RssFeed.url is defined %}
                                <a href="{{ feedArticles[0].RssFeed.url }}" 
                                   target="_blank"
                                   class="text-indigo-600 hover:text-indigo-800">
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                            {% endif %}
                        </div>
                    </div>

                    {# Liste des articles du flux #}
                    <div class="divide-y divide-gray-200">
                        {% for article in feedArticles|sort((a, b) => b.pubDate <=> a.pubDate) %}
                            <article class="p-6 hover:bg-gray-50 transition-colors duration-200">
                                <div class="flex flex-col gap-2">
                                    {% if article.pubDate %}
                                        <div class="text-sm text-gray-500">
                                            <i class="far fa-clock mr-2"></i>
                                            {{ article.pubDate|date('d/m/Y H:i') }}
                                        </div>
                                    {% endif %}

                                    <h3 class="text-lg font-semibold text-gray-900">
                                        <a href="{{ article.link ?? '#' }}" 
                                           target="_blank"
                                           class="hover:text-indigo-600 transition-colors">
                                            {{ article.title ?? 'Sans titre' }}
                                        </a>
                                    </h3>

                                    {% if article.description %}
                                        <p class="text-gray-600 line-clamp-2">
                                            {{ article.description|striptags }}
                                        </p>
                                    {% endif %}

                                    {% if article.link %}
                                        <div class="mt-4">
                                            <a href="{{ article.link }}" 
                                               target="_blank"
                                               class="inline-flex items-center text-sm text-indigo-600 hover:text-indigo-800">
                                                Lire l'article complet
                                                <i class="fas fa-arrow-right ml-2"></i>
                                            </a>
                                        </div>
                                    {% endif %}
                                </div>
                            </article>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
{% endblock %}
