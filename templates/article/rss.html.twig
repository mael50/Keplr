{% extends 'base.html.twig' %}

{% block title %}Articles du flux{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-5xl">
    <h1 class="text-4xl font-bold mb-8">Articles du flux</h1>
    <div class="flex items-center justify-between mb-6">
        <a href="{{ path('app_article') }}" 
           class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-md hover:bg-gray-200 transition-colors duration-200">
            <i class="fas fa-arrow-left mr-2"></i>
            Retour aux flux
        </a>
    </div>
    {{ component('ArticleGrid', { rssFeed: rssFeed }) }}
</div>
{% endblock %}